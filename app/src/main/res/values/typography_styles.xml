        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Typography.H5.Bold" parent="Typography.H5">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.H6" parent="TextAppearance.AppCompat">
