<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/Tab</item>
        <item name="tabSelectedTextColor">@color/colorTextInverse</item>
    </style>

    <style name="Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/typography_body2</item>
        <item name="android:textColor">@color/colorTextInverse</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/view_button_primary_background</item>
        <item name="android:minWidth">@dimen/viewButtonMinWidth</item>
        <item name="android:minHeight">@dimen/viewButtonMinHeight</item>
        <item name="android:paddingStart">@dimen/viewButtonHorizontalPadding</item>
        <item name="android:paddingEnd">@dimen/viewButtonHorizontalPadding</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/view_button_secondary_background</item>
        <item name="android:textColor">@color/colorTextInverse</item>
        <item name="android:minWidth">@dimen/viewButtonMinWidth</item>
        <item name="android:minHeight">@dimen/viewButtonMinHeight</item>
        <item name="android:paddingStart">@dimen/viewButtonHorizontalPadding</item>
        <item name="android:paddingEnd">@dimen/viewButtonHorizontalPadding</item>
    </style>

</resources>