<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_large_16dp"
    android:layout_marginBottom="@dimen/padding_medium_large_12dp"
    android:layout_marginEnd="@dimen/padding_large_16dp"
    app:cardBackgroundColor="@color/cardBackgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/padding_large_16dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/study_list_audio_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="84dp" />

        <com.consistence.pinyin.kit.AppTextView
            style="@style/Typography.Caption.Bold"
            android:id="@+id/study_list_item_chinese_phrase_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_large_16dp"
            android:layout_marginTop="@dimen/padding_large_16dp"
            android:layout_marginEnd="@dimen/padding_medium_8dp"
            android:text="@string/study_item_chinese_phrase"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/study_list_audio_guideline"/>

        <com.consistence.pinyin.kit.AppTextView
            style="@style/Typography.Body2"
            android:id="@+id/study_list_item_chinese_phrase_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_large_16dp"
            android:layout_marginEnd="@dimen/padding_medium_8dp"
            android:maxLines="1"
            android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@+id/study_list_audio_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/study_list_item_chinese_phrase_label"
            tools:text="昨天我去了超市" />

        <com.consistence.pinyin.kit.AppTextView
            style="@style/Typography.Caption.Bold"
            android:id="@+id/study_list_item_english_translation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_large_16dp"
            android:layout_marginTop="@dimen/padding_small_4dp"
            android:layout_marginEnd="@dimen/padding_medium_8dp"
            android:text="@string/study_item_english_translation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/study_list_item_chinese_phrase_value"
            app:layout_constraintRight_toLeftOf="@+id/study_list_audio_guideline"/>

        <com.consistence.pinyin.kit.AppTextView
            style="@style/Typography.Body2"
            android:id="@+id/study_list_item_english_translation_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_large_16dp"
            android:layout_marginEnd="@dimen/padding_medium_8dp"
            android:maxLines="1"
            android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@+id/study_list_audio_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/study_list_item_english_translation"
            tools:text="Yesterday I went to the supermarket" />

        <ImageButton
            android:id="@+id/study_list_item_delete"
            android:layout_width="@dimen/study_list_delete_size"
            android:layout_height="@dimen/study_list_delete_size"
            android:layout_margin="@dimen/padding_large_16dp"
            android:background="@color/cardBackgroundColor"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/app_audio_play_content_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>